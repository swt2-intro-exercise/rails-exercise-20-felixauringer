<h1>Authors</h1>

<h2><%= link_to 'New author', new_author_path %></h2>

<table>
  <tr>
    <th><strong>Name</strong></th>
    <th><strong>Homepage</strong></th>
    <th colspan="3">Actions</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Homepage', root_path %>
